policy "permit_get_personDiagNurse"
permit
    action.method == "GET"
where
  "NURSE" in subject..authority;
  resource.uri =~ "/person/readDiag/[0-9]+";



policy "permit_list_person"
permit
    action.method == "GET"
where
  resource.uri =~ "/person/list";


policy "permit_doctor_post_person"
permit
